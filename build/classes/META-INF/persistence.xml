<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ClinicManagerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.entitesbean.ImportMedicine</class>
    <class>com.entitesbean.Medicine</class>
    <class>com.entitesbean.Supplier</class>
    <class>com.entitesbean.InvoiceDetails</class>
    <class>com.entitesbean.Employees</class>
    <class>com.entitesbean.MedicineCategories</class>
    <class>com.entitesbean.ImportMedicineDetail</class>
    <class>com.entitesbean.Invoices</class>
    <class>com.entitesbean.Sysdiagrams</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=ClinicManager;encrypt=true;trustServerCertificate=true"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="sqladmin"/>
    </properties>
  </persistence-unit>
</persistence>
